{
  "version": 2,
  "builds": [
    {
      "src": "api/chat.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/vercel-chatbot.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/frontend/vercel-chatbot.html"
    },
    {
      "src": "/chat",
      "dest": "/frontend/vercel-chatbot.html"
    },
    {
      "src": "/api/chat",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/chat.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/vercel-chatbot.html"
    }
  ]
}
